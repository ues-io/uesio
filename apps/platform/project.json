{
  "name": "platform",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/platform",
  "targets": {
    "build": {
      "executor": "@nx-go/nx-go:build",
      "options": {
        "main": "{projectRoot}/main.go",
        "outputPath": "dist/platform/uesio"
      }
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "seed": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "{projectRoot}/main.go",
        "args": ["seed"]
      },
      "dependsOn": ["^build"]
    },
    "migrate-db": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "{projectRoot}/main.go",
        "args": ["migrate"]
      },
      "dependsOn": ["^build"]
    },
    "serve": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "{projectRoot}/main.go",
        "args": ["serve"]
      },
      "dependsOn": ["^build"]
    },
    "worker": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "{projectRoot}/main.go",
        "args": ["worker"]
      },
      "dependsOn": ["^build"]
    },
    "build-image": {
      "executor": "nx:run-commands",
      "options": {
        "command": "export GITSHA=$(git rev-parse --short HEAD) && docker build --tag uesio:$GITSHA --tag uesio:latest -f ./apps/platform/Dockerfile .",
        "cwd": "."
      },
      "dependsOn": ["^build"]
    },
    "test": {
      "executor": "@nx-go/nx-go:test",
      "dependsOn": ["^build"]
    },
    "tidy": {
      "executor": "@nx-go/nx-go:tidy"
    }
  },
  "tags": [],
  "implicitDependencies": ["vendor", "ui"]
}
