<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{{ .Route.Title }}</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="minimum-scale=1, initial-scale=1, width=device-width, shrink-to-fit=no" />
        {{- if .Route -}}
            {{- if .Route.Tags -}}
                {{- range .Route.Tags }}
                    {{- if and (eq .Location "head") (eq .Type "meta") -}}
        <meta name="{{.Name}}" content="{{.Content}}" data-uesio="true"/>
                    {{- end -}}
                {{- end -}}
            {{- end -}}
        {{- end }}
        {{- if .Site -}}
            {{- if (eq .Site.EnableSEO false) -}}
        <meta name="robots" content="none"/>
            {{- end -}}
        {{- end }}
        <style>
            {{template "fonts" .}}
        </style>
        {{- if .DevMode -}}
        <script src="{{ .StaticAssetsPath }}/static/vendor/react.development.js"></script>
        <script src="{{ .StaticAssetsPath }}/static/vendor/react-dom.development.js"></script>
        {{- else -}}
        <script src="{{ .StaticAssetsPath }}/static/vendor/react.production.min.js"></script>
        <script src="{{ .StaticAssetsPath }}/static/vendor/react-dom.production.min.js"></script>
        {{- end -}}
        <script src="{{ .StaticAssetsPath }}/static/vendor/emotion-css.umd.min.js"></script>
        <script src="{{ .StaticAssetsPath }}/static/ui/uesio.js" type="module"></script>
    </head>
<body>
    <div id="root" class="h-screen overflow-auto"></div>
    <script type="module">
        import * as uesio from "{{ .StaticAssetsPath }}/static/ui/uesio.js"
        window.uesio = uesio
        window.uesioStaticAssetsPath = "{{ .StaticAssetsPath }}"
    </script>
    {{$workspace := .Route.Workspace -}}
    {{$site := .Site -}}
    {{- if .PreloadMetadata -}}
        {{- if .PreloadMetadata.ComponentPack -}}
            {{- range .PreloadMetadata.ComponentPack.GetItems -}}
                {{- $packURL := getPackURL .GetKey $workspace $site -}}
                {{- if $packURL -}}
                <script src="{{$packURL}}" type="module"></script>
                {{- end -}}
            {{- end -}}
        {{- end -}}
    {{- end -}}
    <script type="module">
        uesio.loader(document.querySelector("#root"), {{.}});
    </script>
    <!-- Preload material icons since they will be used on almost all pages, and take a while to download -->
    <link rel="preload" href="{{ .StaticAssetsPath }}/fonts/materialsymbols.woff2" as="font" crossOrigin="anonymous"/>
</body>
</html>
